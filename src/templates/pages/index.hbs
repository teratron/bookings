<style>
    .outline > * {
        outline: 1px solid #ddd;
    }
</style>
{{#> base main-partial-block=true title=title}}
    {{> jumbotron-search}}

    <main class="app-main">
        <div class="app-container">

            <aside class="sidebar">
                <nav>

                    {{#each page}}
                        <div>
                            <a href="{{this.url}}">{{this.title}}</a>
                        </div>
                    {{/each}}

                </nav>
            </aside>

            <section class="content">
                content
            </section>

            <section class="grid-12 outline">
                {{#each debugGrid}}
                    <div>{{this}}</div>
                {{/each}}
            </section>

            <section class="grid-12 shrink outline">
                {{#each debugGrid}}
                    <div>{{this}}</div>
                {{/each}}
            </section>

            <section class="row outline">
                <div>1</div>
                <div>2</div>
                <div>3</div>
                <div class="col-3">4</div>
                <div>5</div>
                <div>6</div>
                <div>7</div>
                <div>8</div>
                <div>9</div>
                <div>10</div>
                <div>11</div>
                <div>12</div>
            </section>
        </div>
    </main>
{{/base}}
