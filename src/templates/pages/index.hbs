{{#> base main-partial-block=true title=title}}
{{!> jumbotron}}
    <style>
        .outline > * {
            outline: 1px solid #ddd;
        }
    </style>

    <aside class="sidebar">
        <nav>
            {{#each pages}}
                <div>
                    <a href="./{{this}}.html">{{this}}</a>
                </div>
            {{/each}}
        </nav>
    </aside>

    <section class="content">
        content
        <nav class="col">
            {{#each pages}}
                <div>
                    <a href="./{{this}}.html">{{this}}</a>
                </div>
            {{/each}}
        </nav>
    </section>

    <section class="grid-12 outline">
        {{#each debugGrid}}
            <div>{{this}}</div>
        {{/each}}
    </section>

    <section class="grid-12 shrink outline">
        {{#each debugGrid}}
            <div>{{this}}</div>
        {{/each}}
    </section>

    <section class="row outline">
        <div>1</div>
        <div>2</div>
        <div>3</div>
        <div class="col-3">4</div>
        <div>5</div>
        <div>6</div>
        <div>7</div>
        <div>8</div>
        <div>9</div>
        <div>10</div>
        <div>11</div>
        <div>12</div>
    </section>
{{/base}}
